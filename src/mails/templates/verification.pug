doctype html
html(lang="en")
    head
        title Email Verification
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        style.
            body {
                font-family: Arial, sans-serif;
                display: flex;
                justify-content: center;
                align-items: center;
                background-color: #f0f2f5;
                color: #333;
                margin: 0;
                padding: 0;
                height: 100vh;
            }
            .container {
                background-color: #fff;
                padding: 25px;
                border-radius: 8px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                max-width: 500px;
                text-align: center;
            }
            h1 {
                color: #007BFF;
                font-size: 24px;
                margin-bottom: 20px;
            }
            p {
                font-size: 16px;
                line-height: 1.5;
                color: #555;
                margin: 10px 0;
            }
            .code {
                font-weight: bold;
                font-size: 18px;
                color: #007BFF;
                letter-spacing: 2px;
            }
            .footer {
                font-size: 14px;
                color: #888;
                margin-top: 20px;
            }
    body
        .container
            h1 Email Verification
            p Hello,
            p Your verification code is:
            p.code #{code}
            p Please use this code to verify your email address.
